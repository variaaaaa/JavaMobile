<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/brown">

    <EditText
        android:id="@+id/editTextMass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Масса"
        android:minHeight="48dp" />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radio_button_carats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Караты" />

        <RadioButton
            android:id="@+id/radio_button_grams"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Граммы" />

        <RadioButton
            android:id="@+id/radio_button_kg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Килограммы" />

        <RadioButton
            android:id="@+id/radio_button_centners"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Центнеры" />

        <RadioButton
            android:id="@+id/radio_button_tons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Тонны" />

        <RadioButton
            android:id="@+id/radio_button_pounds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Фунты" />

        <RadioButton
            android:id="@+id/radio_button_ounces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Унции" />
    </RadioGroup>

    <Button
        android:id="@+id/buttonConvert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="Вычислить" />

<!--    <Button-->
<!--        android:id="@+id/button_reset"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_gravity="center_horizontal"-->
<!--        android:layout_marginTop="16dp"-->
<!--        android:text="Сбросить данные" />-->
</LinearLayout>